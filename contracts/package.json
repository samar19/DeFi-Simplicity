{
  "name": "sugarcane-contracts",
  "description": "Contracts for Sugarcane",
  "version": "1.0.0",
  "scripts": {
    "compile": "hh compile",
    "size": "hh size-contracts",
    "coverage": "hh coverage --network hardhat",
    "format": "./node_modules/.bin/prettier --write contracts/**/*.sol",
    "lint": "prettier --list-different 'contracts/**/*.sol'",
    "status": "./node_modules/.bin/solhint -f table contracts/**/*.sol",
    "test": "hh test --network hardhat",
    "run-local-node": "hh node --hostname 0.0.0.0",
    "console-local": "npx hardhat console --network localhost",
    "exec-deploy-local": "npx hardhat run scripts/1-deploy_all.ts --network localhost",
    "exec-deploy-base-goerli": "npx hardhat run scripts/1-deploy_all.ts --network baseGoerli",
    "exec-playground-investment_tracking": "npx hardhat run scripts/_playground-investment_tracking.ts --network localhost",
    "exec-playground-onboarding": "npx hardhat run scripts/_playground-onboarding.ts --network localhost",
    "exec-playground": "npx hardhat run scripts/_playground.ts --network localhost",
    "exec-deploy-harbor-000": "npx hardhat run scripts/harbor/_playground-onboarding.ts --network harborGoerli",
    "exec-deploy-harbor-1": "npx hardhat run scripts/harbor/1-deploy_goerli.ts --network harborGoerli",
    "exec-deploy-harbor-2": "npx hardhat run scripts/harbor/2-deploy_mumbai.ts --network harborMumbai",
    "exec-deploy-harbor-3": "npx hardhat run scripts/harbor/3-connect_secondary_to_primary.ts --network harborGoerli",
    "exec-deploy-harbor-4": "npx hardhat run scripts/harbor/4-onboard.ts --network harborGoerli",
    "exec-deploy-harbor-5": "npx hardhat run scripts/harbor/5-check_mumbai.ts --network harborMumbai"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run prettier:solidity"
    }
  },
  "devDependencies": {
    "@axelar-network/axelar-gmp-sdk-solidity": "^3.2.1",
    "@ethersproject/experimental": "^5.7.0",
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@nomiclabs/hardhat-etherscan": "^3.1.6",
    "@nomiclabs/hardhat-waffle": "^2.0.5",
    "@openzeppelin/contracts": "^4.8.1",
    "@openzeppelin/contracts-upgradeable": "^4.8.1",
    "@openzeppelin/hardhat-upgrades": "^1.22.1",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.14.1",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.7",
    "hardhat-contract-sizer": "^2.8.0",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.3",
    "prettier": "^2.8.4",
    "prettier-plugin-solidity": "^1.1.2",
    "solhint": "^3.4.0",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.5"
  }
}
